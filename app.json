{
  "expo": {
    "name": "BioSuape Conecta",
    "slug": "biosuape-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "src/assets/images/icon.png",
    "scheme": "biosuapeconecta",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "owner": "pedromartss007",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.biosuapeconecta.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Precisamos de sua localização para que você possa registrar a coordenada de suas descobertas de bioindicadores e contribuir com a ciência.",
        "NSCameraUsageDescription": "Para adicionar fotos às suas descobertas, este aplicativo precisa de acesso à sua câmera.",
        "NSPhotoLibraryUsageDescription": "Para adicionar fotos existentes às suas descobertas, este aplicativo precisa de acesso à sua galeria de fotos.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "src/assets/images/adaptive-icon.png",
        "backgroundColor": "#1F1FB8"
      },
      "package": "com.biosuapeconecta.app",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "src/assets/images/splash.png",
          "resizeMode": "contain",
          "backgroundColor": "#1A1A1D"
        }
      ],
      "expo-sqlite",
      "expo-font",
      "expo-secure-store",
      "expo-image-picker"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "80e185bb-f16f-4d48-9a9f-8387696abc6e"
      }
    }
  }
}
